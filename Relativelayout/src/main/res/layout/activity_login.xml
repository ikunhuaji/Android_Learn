<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 第一行-->
    <EditText
        android:id="@+id/edt_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="这是第一行" />
    <!--    第二行-->
    <LinearLayout
        android:id="@+id/layout_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/edt_first">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="第二行第一个"/>
        <EditText
            android:id="@+id/edt_second_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="第二行第二个"/>

    </LinearLayout>
    <!--    第三行  相对于 linerlayout 里面的控件会发生隔离情况-->
    <Button
        android:id="@+id/btn_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textSize="20sp"
        android:layout_below="@id/layout_second"
        android:layout_alignParentRight="true"/>

    <!--    第四行   忘记密码-->
    <EditText
        android:id="@+id/edt_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:textSize="20sp"
        android:layout_below="@id/btn_btn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="20sp"
        android:textColor="#0000FF"
        android:layout_below="@id/btn_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignBaseline="@id/edt_pwd"/>
    <!--    alignBaseline  和指定控件中轴线对齐-->

</RelativeLayout>