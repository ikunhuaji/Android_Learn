<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_cart_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:src="@drawable/huawei"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginLeft="200dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@+id/iv_cart_image"
            android:textColor="@color/black"
            tools:text="华为" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cart_intro"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:textColor="@drawable/gray"
            tools:text="退货包运费 极速退款" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cart_price"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:textColor="@drawable/red"
            tools:text="￥5999"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tv_cart_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" — "
                android:textSize="20sp"
                android:layout_marginLeft="80dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_cart_cnt"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                tools:text="100"
                android:textSize="15sp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_cart_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" + "
                android:textSize="20sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <Button
            android:layout_marginRight="20dp"
            android:id="@+id/btn_cart_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@drawable/orange"
            android:text="删除"
            android:textColor="@drawable/white"
            android:layout_gravity="right"/>

    </LinearLayout>


</RelativeLayout>